{
    "name": "minvws/dusi-bridge",
    "description": "RMQ request/response bridge",
    "type": "library",
    "license": "MIT",
    "minimum-stability": "stable",
    "require": {
        "php": "^8.2",
        "php-amqplib/php-amqplib": "^3.5",
        "minvws/codable": "dev-feature/base as 1.0.x-dev"
    },
    "require-dev": {
        "ext-pcntl": "*",
        "phpunit/phpunit": "^10.3",
        "phpstan/phpstan": "^1.10",
        "fakerphp/faker": "^1.23",
        "squizlabs/php_codesniffer": "^3.7",
        "slevomat/coding-standard": "^8.13",
        "orchestra/testbench": "^8.6",
        "vimeo/psalm": "^5.14",
        "phpmd/phpmd": "^2.13",
        "nunomaduro/larastan": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "MinVWS\\DUSi\\Shared\\Bridge\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MinVWS\\DUSi\\Shared\\Bridge\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "phpstan": "vendor/bin/phpstan analyze -c phpstan.neon.dist",
        "phpcs": "vendor/bin/phpcs",
        "phpcbf": "vendor/bin/phpcbf",
        "test": "vendor/bin/phpunit",
        "phpmd": "vendor/bin/phpmd src/ text ruleset.phpmd.xml"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/minvws/nl-rdo-php-codable.git"
        }
    ]
}
