<?xml version="1.0" encoding="UTF-8"?>
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="./vendor/phpunit/phpunit/phpunit.xsd"
         bootstrap="vendor/autoload.php"
         colors="true"
>
    <testsuites>
        <testsuite name="Unit">
            <directory suffix="Test.php">./tests/Unit</directory>
        </testsuite>
        <testsuite name="Feature">
            <directory suffix="Test.php">./tests/Feature</directory>
        </testsuite>
    </testsuites>
    <coverage processUncoveredFiles="true">
        <include>
            <directory suffix=".php">./app</directory>
        </include>
    </coverage>
    <php>
        <env name="APP_ENV" value="testing"/>
        <env name="FORM_DB_HOST" value="form-admin-web-pgsql"/>
        <env name="FORM_DB_DATABASE" value="form_admin_web"/>
        <env name="FORM_DB_PORT" value="5432"/>
        <env name="FORM_DB_USERNAME" value="postgres"/>
        <env name="FORM_DB_PASSWORD" value="password"/>
        <env name="FORM_DB_SSLMODE" value="prefer"/>

        <env name="APPLICATION_DB_HOST" value="portal-backend-pgsql"/>
        <env name="APPLICATION_DB_DATABASE" value="portal_backend"/>
        <env name="APPLICATION_DB_PORT" value="5432"/>
        <env name="APPLICATION_DB_USERNAME" value="postgres"/>
        <env name="APPLICATION_DB_PASSWORD" value="password"/>
        <env name="APPLICATION_DB_SSLMODE" value="prefer"/>

        <env name="BCRYPT_ROUNDS" value="4"/>
        <env name="CACHE_DRIVER" value="array"/>
        <!-- <env name="DB_CONNECTION" value="sqlite"/> -->
        <!-- <env name="DB_DATABASE" value=":memory:"/> -->
        <env name="MAIL_MAILER" value="array"/>
        <env name="QUEUE_CONNECTION" value="sync"/>
        <env name="SESSION_DRIVER" value="array"/>
        <env name="TELESCOPE_ENABLED" value="false"/>
    </php>
</phpunit>
