{
    "plugins": ["prettier"],
    "extends": [
      "eslint:recommended",
      "plugin:prettier/recommended",
      "plugin:compat/recommended"
    ],
    "parser": "esprima",
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module"
    },
    "env": {
      "browser": true,
      "es6": true
    },
    "settings": {
      "polyfills": ["TextDecoder"]
    },
    "globals": {
      "__ENV": true,
      "__VU": true,
      "global": true,
      "Buffer": true
    },
    "overrides": [
      {
        "files": "*.test.js",
        "env": {
          "jest": true,
          "node": true
        }
      },
      {
        "files": ["*.config.js", "webpack.mix.js"],
        "env": {
          "node": true
        }
      }
    ],
    "ignorePatterns": ["public/build/assets"]
  }
  