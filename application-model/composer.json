{
    "name": "minvws/dusi-application-model",
    "description": "Models and repositories for portal-backend",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "thomas-samoht",
            "email": "54805624+thomas-samoht@users.noreply.github.com"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^8.2",
        "laravel/framework": "^10.17",
        "minvws/dusi-serialisation-model": "@dev",
        "minvws/dusi-subsidy-model": "@dev"
    },
    "require-dev": {
        "fakerphp/faker": "^1.23",
        "nunomaduro/larastan": "^2.0",
        "orchestra/testbench": "^8.6",
        "phpmd/phpmd": "^2.13",
        "phpstan/phpstan": "^1.10",
        "phpunit/phpunit": "^10.3",
        "slevomat/coding-standard": "^8.13",
        "squizlabs/php_codesniffer": "^3.7",
        "vimeo/psalm": "^5.14"
    },
    "autoload": {
        "psr-4": {
            "MinVWS\\DUSi\\Shared\\Application\\": "src/",
            "MinVWS\\DUSi\\Shared\\Application\\Database\\Factories\\": "database/factories/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MinVWS\\DUSi\\Shared\\Application\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "MinVWS\\DUSi\\Shared\\Application\\ApplicationServiceProvider"
            ]
        }
    },

    "scripts": {
        "phpstan": "vendor/bin/phpstan analyze -c phpstan.neon.dist",
        "phpcs": "vendor/bin/phpcs",
        "phpcbf": "vendor/bin/phpcbf",
        "test": "vendor/bin/phpunit",
        "phpmd": "vendor/bin/phpmd src/ text ruleset.phpmd.xml"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "repositories": [
        {
            "type": "path",
            "url": "../subsidy-model"
        },
        {
            "type": "path",
            "url": "../serialisation-model"
        },
        {
            "type": "git",
            "url": "git@github.com:minvws/nl-rdo-php-codable.git"
        }
    ]
}
